{
	"name": "rpg-sage",
	"version": "0.0.0",
	"description": "RPG Sage Bot",
	"type": "module",
	"main": "./build/app.mjs",
	"files": [
		"build"
	],
	"directories": {
		"lib": "build"
	},
	"keywords": [
		"RPG",
		"Sage",
		"Discord",
		"Bot"
	],
	"author": "Randal T Meyer <randal.t.meyer@gmail.com> (https://rpgsage.io)",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/randaltmeyer/rpg-sage/issues"
	},
	"homepage": "https://github.com/randaltmeyer/rpg-sage#readme",
	"dependencies": {
		"@discordjs/rest": "1.6.0",
		"@napi-rs/canvas": "0.1.35",
		"discord-api-types": "0.27.3",
		"discord.js": "13.16.0",
		"emoji-regex": "10.2.1",
		"follow-redirects": "1.15.4",
		"pdf2json": "2.0.2",
		"xregexp": "5.1.1"
	},
	"devDependencies": {
		"@types/follow-redirects": "^1.14.1",
		"@types/node": "^18.14.0"
	},
	"scripts": {
		"start": "bash scripts/run-dev.sh",
		"daemon": "bash scripts/daemon.sh",
		"deploy": "bash scripts/deploy.sh",

		"scrub-build": "scripts/scrub.sh build",
		"scrub-logs": "scripts/scrub.sh logs",
		"scrub-pm2": "scripts/scrub.sh pm2",
		"scrub": "scripts/scrub.sh",

		"premono-pm2": "npm run scrub-pm2",
		"mono-pm2": "pm2 start mono.config.cjs --env dev",

		"premono": "npm run scrub-pm2",
		"mono": "npm run build",
		"postmono": "cd build; node --experimental-modules --es-module-specifier-resolution=node mono.mjs botCodeName=dev dataRoot=/Users/randaltmeyer/git/rpg-sage-legacy-data superUserId=253330271678627841 homeServerId=963531189254238278",

		"build": "bash scripts/build.sh",

		"pretest": "npm run build",
		"test": "cd ./tests; node --es-module-specifier-resolution=node run.mjs",
		"posttest": "echo 'test done.'",

		"fix-node_modules": "npm run fix-pdf2json",
		"fix-pdf2json": "[ ! -f \"./node_modules/pdf2json/index.d.ts\" ] && echo 'declare module \"pdf2json\";' > ./node_modules/pdf2json/index.d.ts || echo 'pdf2json okay.'"
	}
}
