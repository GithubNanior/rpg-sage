{
	"name": "rpg-sage",
	"version": "0.0.0",
	"description": "RPG Sage Bot",
	"type": "module",
	"main": "./dist/app.mjs",
	"files": [
		"dist"
	],
	"directories": {
		"lib": "dist"
	},
	"keywords": [
		"RPG",
		"Sage",
		"Discord",
		"Bot"
	],
	"author": "Randal T Meyer <randal.t.meyer@gmail.com> (https://rpgsage.io)",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/randaltmeyer/rpg-sage/issues"
	},
	"homepage": "https://github.com/randaltmeyer/rpg-sage#readme",
	"dependencies": {
		"@discordjs/rest": "^1.6.0",
		"@napi-rs/canvas": "^0.1.35",
		"discord-api-types": "^0.27.3",
		"discord.js": "^13.16.0",
		"emoji-regex": "^10.2.1",
		"follow-redirects": "^1.15.2",
		"pdf2json": "^2.0.1",
		"xregexp": "^5.1.1"
	},
	"devDependencies": {
		"@types/follow-redirects": "^1.14.1",
		"@types/node": "^18.14.0"
	},
	"scripts": {
		"start": "bash scripts/run-dev.sh",
		"daemon": "bash scripts/daemon.sh",
		"deploy": "bash scripts/deploy.sh",

		"scrub-build": "find . -type d -name 'build' -exec rm -rf {} +",
		"postscrub-build": "echo 'scrub-build done.'",
		"scrub-logs": "find . -type f -name '*.log' -exec rm -rf {} +",
		"postscrub-logs": "echo 'scrub-logs done.'",
		"scrub": "npm run scrub-build; npm run scrub-logs;",
		"postscrub": "echo 'scrub done.'",

		"scrub-pm2": "pm2 delete all || true",
		"postscrub-pm2": "npm run scrub-logs",

		"premono-pm2": "npm run scrub-pm2",
		"mono-pm2": "pm2 start mono.config.cjs --env dev",

		"premono": "npm run scrub-pm2",
		"mono": "npm run build",
		"postmono": "cd dist; node --experimental-modules --es-module-specifier-resolution=node mono.mjs botCodeName=dev dataRoot=/Users/randaltmeyer/git/rpg-sage-legacy/dist/data dataRootFoundry=/Users/randaltmeyer/git/rpg-sage/data/foundry superUserId=253330271678627841 homeServerId=963531189254238278",

		"prebuild": "rm -rf dist; rm -rf types",
		"build": "rm -rf tsconfig.tsbuildinfo; tsc --build tsconfig.json",
		"postbuild": "bash scripts/post-build.sh",

		"pretest": "npm run build",
		"test": "bash scripts/run-tests.sh",

		"npm-fix": "bash scripts/node-module-fixes.sh"
	}
}
