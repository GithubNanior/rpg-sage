{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "pre-build.sh",
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/pre-build.sh"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "Transpile",
			"dependsOn": ["pre-build.sh"],
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": "$tsc",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "post-build.sh",
			"dependsOn": ["Transpile"],
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/post-build.sh"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "run-tests",
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/run-tests.sh"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
	]
}